<tool id="annotate_vcf" name="VCF Annotator" version="0.1">
	<description>for a VCF file.</description>
	<command>
        java -jar ~/galaxy-dist/tool-data/shared/jars/snpEff/SnpSift.jar annotate $snpDB $variants 1> $variants_annotated 2> $err_output
	</command>
	<inputs>
		<param type="data" name="variants" format="vcf" label="Input VCF"/>
		<param type="data" name="snpDB" format="vcf" label="SNP Database"/>
	</inputs>
	<outputs>
		<data name="variants_annotated" format="vcf"/>
		<data name="err_output" format="txt"/>
	</outputs>

<help>
    Annotates the input vcf file against the dbSNP database.
</help>

</tool>
